<h1>Pokemon details </h1>
<div class="container">
  <div class="row d-flex mt-5" style="height:55vh">
    <div class="col-sm-6 position-relative" style="height:55vh">
      <p class="text-center position-absolute  bg-danger p-1" style="transform:rotate(-25deg); top:15px; left:-20px; color:white"><%= @pokemon.name %></p>
      <div class="d-flex justify-content-center"  style="height:55vh">
        <div class="card-poke">
          <div class="m-3 p-3 w-100">
            <img class ="poke_img" src="https://www.pokepedia.fr/images/thumb/4/44/Psykokwak-RFVF.png/250px-Psykokwak-RFVF.png">
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6" style="height:55vh">
      <div class="card-poke d-flex flex-column"  style="height:55vh">
        <div class="m-3 p-3 h-50">
          <img class ="poke_img" src="https://www.pokepedia.fr/images/thumb/6/6e/Akwakwak-RFVF.png/610px-Akwakwak-RFVF.png">
        </div>
        <div class="card-product-infos h-50 px-5 pb-2">
          <%# <p>Rating : = @pokemon.rating</p> %>
          <p>Evolution : <%= "Aquakwak"%></p>
          <p>Special capacity: <%= @pokemon.special_capacity %></p>
          <p>Category : <%= @pokemon.category %></p>
          <p>Description : <%= @pokemon.description %></p>
          <p>User : <%= @pokemon.user.name %></p>

        </div>
      </div>
    </div>
  </div>

  <div class="row mx-0 my-5 p-5 card-poke">
    <%= simple_form_for([@pokemon, @rental]) do |f| %>
      <%= f.input :rental_beginning %>
      <%= f.input :rental_end %>
      <%= f.submit %>
    <% end %>
  </div>
</div>



<% if policy(@pokemon).edit? %>
  <%= link_to "Edit pokemon", edit_pokemon_path(@pokemon) %>
  <%= link_to "Delete pokemon", pokemon_path(@pokemon), method: :delete, data: { confirm: "Are you sure?", disable_with: "Processing..." } %>
<% end %>
